<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <USE_NUGET>true</USE_NUGET>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="BenchmarkDotNet" Version="0.14.0" />
      <PackageReference Condition="'$(USE_NUGET)' == 'true'" Include="Google.Protobuf" Version="3.29.1" />
    </ItemGroup>
    
    <ItemGroup>
        <Protobuf Include="*.proto" />
    </ItemGroup>
    
    <ItemGroup>
      <ProjectReference Condition="'$(USE_NUGET)' != 'true'" Include="..\Google.Protobuf\Google.Protobuf.csproj" />
    </ItemGroup>

</Project>
